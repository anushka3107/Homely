<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".booking">

    <ScrollView
        android:fitsSystemWindows="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical"
        android:scrollbarSize="0dp"
        android:scrollbarStyle="insideOverlay"
        android:layout_marginBottom="10dp">

        <LinearLayout
            android:fitsSystemWindows="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_margin="20dp"
            >

            <Button
                android:id="@+id/CancelBtn"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="right"
                android:background= "@drawable/ic_baseline_close_24"
                />

            <ImageView
                android:fitsSystemWindows="true"
                android:id="@+id/bear"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:layout_gravity="center"
                android:src="@drawable/icon" />


            <TextView
                android:layout_width="286dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="0dp"
                android:fitsSystemWindows="true"
                android:padding="10dp"
                android:text="Hey!

                                    Let's go get a home"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="25sp"
                android:textStyle="bold" />

            <com.google.android.material.textfield.TextInputEditText
                android:fitsSystemWindows="true"
                android:id="@+id/VisitorName"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="30dp"
                android:drawableLeft="@drawable/ic_baseline_person_24"
                android:drawablePadding="10dp"
                android:ems="10"
                android:hint="Name"
                android:textSize="16dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:inputType="textPersonName"
                android:paddingLeft="10dp" />

            <com.google.android.material.textfield.TextInputEditText
                android:fitsSystemWindows="true"
                android:id="@+id/VisitorEmailAddress"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="16dp"
                android:drawableLeft="@drawable/ic_baseline_mail_outline_24"
                android:drawablePadding="10dp"
                android:ems="10"
                android:hint="Email"
                android:textSize="16dp"
                android:inputType="textEmailAddress"
                android:paddingLeft="10dp" />


            <com.google.android.material.textfield.TextInputEditText
                android:fitsSystemWindows="true"
                android:id="@+id/VisitorPhone"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="16dp"
                style="@style/CardView"
                android:drawableLeft="@drawable/ic_baseline_phone_iphone_24"
                android:drawablePadding="10dp"
                android:ems="10"
                android:textSize="16dp"
                android:hint="Phone Number"
                android:inputType="phone"
                android:paddingLeft="10dp" />

            <com.google.android.material.textfield.TextInputEditText
                android:fitsSystemWindows="true"
                android:id="@+id/date"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="16dp"
                style="@style/CardView"
                android:drawableLeft="@drawable/ic_baseline_date_range_24"
                android:drawablePadding="10dp"
                android:ems="10"
                android:textSize="16dp"
                android:hint="DD/MM/yyyy"
                android:autofillHints="@string/AvailableDates"
                android:inputType="date"
                android:paddingLeft="10dp" />

            <com.google.android.material.textfield.TextInputEditText
                android:fitsSystemWindows="true"
                android:id="@+id/time"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="16dp"
                style="@style/CardView"
                android:drawableLeft="@drawable/ic_baseline_access_time_filled_24"
                android:drawablePadding="10dp"
                android:ems="10"
                android:textSize="16dp"
                android:hint="00:00 AM/PM"
                android:autofillHints="@string/AvailableSlots"
                android:inputType="time"
                android:paddingLeft="10dp" />





            <com.google.android.material.button.MaterialButton
                android:id="@+id/ConfirmBtn"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="50dp"
                android:layout_marginRight="10dp"
                android:backgroundTint="@color/black"
                android:padding="14dp"
                android:shadowColor="@color/textcolor"
                android:text="Confirm"
                android:textStyle="bold"
                app:cornerRadius="10dp"
                android:textColor="@color/white"
                android:layout_marginBottom="50dp"
                app:elevation="8dp"
                android:textSize="20dp"
                />


        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>




