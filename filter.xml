<?xml version="1.0" encoding="UTF-8"?>


<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FilterActivity">



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="10dp"
        android:scrollbarSize="0dp"
        android:scrollbarStyle="insideOverlay"
        android:scrollbars="vertical">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="115dp"
                android:layout_height="79dp"
                android:layout_gravity="left"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="30dp"
                android:text="Only for you"
                android:textColor="@color/black"
                android:textSize="25sp"
                android:textStyle="bold" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="274dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="60dp"
                android:drawableLeft="@drawable/ic_baseline_location_city_24"
                android:drawablePadding="10dp"
                android:ems="10"
                android:padding="10dp"
                android:text="Your Preffered Location"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/location"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/edittextround"
                android:drawableLeft="@drawable/ic_baseline_location_city_24"
                android:drawablePadding="10dp"
                android:hint="Location" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="274dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="30dp"
                android:drawableLeft="@drawable/ic_baseline_person_24"
                android:drawablePadding="10dp"
                android:ems="10"
                android:padding="10dp"
                android:text="Who are you"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <androidx.appcompat.widget.AppCompatSpinner
                android:id="@+id/allowed"
                android:layout_width="330dp"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:backgroundTint="@color/black"
                android:fadeScrollbars="true"
                android:fitsSystemWindows="true"
                android:outlineSpotShadowColor="@color/textcolor"
                android:scrollIndicators="right"
                android:scrollbarFadeDuration="1000"
                android:scrollbarSize="5dp"
                android:scrollbarStyle="insideOverlay"
                android:scrollbars="vertical"
                android:spinnerMode="dropdown"
                android:verticalScrollbarPosition="right" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="274dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="40dp"
                android:drawableLeft="@drawable/ic_baseline_price_change_24"
                android:drawablePadding="10dp"
                android:ems="10"
                android:padding="10dp"
                android:text="Preferred Range in Price"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <androidx.appcompat.widget.AppCompatSpinner
                android:id="@+id/budget"
                android:layout_width="330dp"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:backgroundTint="@color/black"
                android:fadeScrollbars="true"
                android:fitsSystemWindows="true"
                android:outlineSpotShadowColor="@color/textcolor"
                android:scrollIndicators="right"
                android:scrollbarFadeDuration="1000"
                android:scrollbarSize="5dp"
                android:scrollbarStyle="insideOverlay"
                android:scrollbars="vertical"
                android:spinnerMode="dropdown"
                android:verticalScrollbarPosition="right" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="274dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="40dp"
                android:drawableLeft="@drawable/ic_baseline_verified_user_24"
                android:drawablePadding="10dp"
                android:ems="10"
                android:padding="10dp"
                android:text="Your Living Preference"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <androidx.appcompat.widget.AppCompatSpinner
                android:id="@+id/preference"
                android:layout_width="330dp"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:backgroundTint="@color/black"
                android:fadeScrollbars="true"
                android:fitsSystemWindows="true"
                android:outlineSpotShadowColor="@color/textcolor"
                android:scrollIndicators="right"
                android:scrollbarFadeDuration="1000"
                android:scrollbarSize="5dp"
                android:scrollbarStyle="insideOverlay"
                android:scrollbars="vertical"
                android:spinnerMode="dropdown"
                android:verticalScrollbarPosition="right" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/ApplyBtn"
                android:layout_width="330dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:backgroundTint="@color/black"
                android:padding="14dp"
                android:shadowColor="@color/textcolor"
                android:text="Apply"
                app:cornerRadius="10dp" />


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="10dp"
                android:foregroundGravity="center" />

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>