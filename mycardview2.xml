<?xml version="1.0" encoding="utf-8"?>


<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="380dp"
    android:layout_height="380dp"
    android:layout_marginLeft="4dp"
    android:layout_marginRight="12dp"
    app:barrierAllowsGoneWidgets="true"
    app:barrierMargin="8dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="15dp"
    app:cardMaxElevation="8dp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        android:orientation="vertical">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/houseimage"
            android:layout_width="300dp"
            android:layout_height="180dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/img1"
            android:scaleType="centerCrop"
            app:riv_corner_radius="15dp"
            />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/housename"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="9dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="-5dp"
            android:text="Farmhouse"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/place"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="9dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="-5dp"
            android:textColor="@color/textcolor"
            android:textSize="14sp"
            android:text="Indore"
            />

        <LinearLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="11dp"
            android:padding="2dp"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:padding="3dp"
                android:text="10000 per month"
                android:textSize="14sp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="-5dp"/>

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/bedicon"
                android:layout_width="25dp"
                android:layout_height="30dp"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="40dp"
                android:src="@drawable/ic_outline_bedroom_parent_24" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/noofbed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="-40dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="-10dp"
                android:padding="5dp"
                android:text="5"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/bathicon"
                android:layout_width="25dp"
                android:layout_height="30dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:src="@drawable/ic_baseline_bathtub_24"
                tools:ignore="MissingClass" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/noofbath"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="-15dp"
                android:layout_marginTop="10dp"
                android:padding="5dp"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                android:text="5"/>


        </LinearLayout>

    </LinearLayout>


</androidx.cardview.widget.CardView>
