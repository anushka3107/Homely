<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PostHomeInfo">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical"
        android:scrollbarSize="0dp"
        android:scrollbarStyle="insideOverlay"
        android:layout_marginBottom="10dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="15dp"
   >

        <TextView
            android:id="@+id/posttext"
            android:layout_width="373dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:text="Details of your property"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:textStyle="bold" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/hname"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="40dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/edittextround"
            android:drawableLeft="@drawable/ic_baseline_home_24"
            android:drawablePadding="10dp"
            android:hint="Property Name" />


        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/hplace"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/edittextround"
            android:drawableLeft="@drawable/ic_baseline_location_city_24"
            android:drawablePadding="10dp"
            android:hint="Location" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/hprice"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/edittextround"
            android:drawableLeft="@drawable/ic_baseline_price_change_24"
            android:drawablePadding="10dp"
            android:hint="Price per month" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/himage"
                android:layout_width="79dp"
                android:layout_height="60dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="10dp"
                app:srcCompat="@drawable/upload"
                tools:ignore="MissingClass" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/uploadbtn"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:backgroundTint="@color/black"
                android:text="Upload house image"
                android:textColor="@color/blue"
                android:textSize="18sp"
                android:textStyle="italic" />

        </LinearLayout>

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/hdescription"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/edittextround"
            android:drawableLeft="@drawable/ic_baseline_description_24"
            android:drawablePadding="10dp"
            android:hint="Description" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/hbed"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/edittextround"
            android:drawableLeft="@drawable/ic_outline_bedroom_parent_24"
            android:drawablePadding="10dp"
            android:hint="No. of bedrooms"
            android:inputType="number" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/hbath"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/edittextround"
            android:drawableLeft="@drawable/ic_baseline_bathtub_24"
            android:drawablePadding="10dp"
            android:hint="No. of restrooms"
            android:inputType="number" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/hrating"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/edittextround"
            android:drawableLeft="@drawable/ic_baseline_star_rate_24"
            android:drawablePadding="10dp"
            android:hint="Ratings out of 5"
            android:inputType="number" />

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ownercard"
                android:layout_width="79dp"
                android:layout_height="60dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="40dp"
                android:layout_marginRight="10dp"
                app:srcCompat="@drawable/upload"
                tools:ignore="MissingClass" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/ownercardupload"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:backgroundTint="@color/black"
                android:padding="10dp"
                android:text="Upload owner business/contact card image"
                android:textColor="@color/blue"
                android:textSize="18sp"
                android:textStyle="italic" />


        </LinearLayout>


        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:drawableLeft="@drawable/ic_baseline_verified_user_24"
            android:drawablePadding="10dp"
            android:ems="10"
            android:padding="10dp"
            android:text="People Allowed"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <androidx.appcompat.widget.AppCompatCheckBox
            android:id="@+id/selectcouples"
            android:layout_width="331dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:drawableRight="@drawable/ic_baseline_people_outline_24"
            android:drawablePadding="10dp"
            android:ems="10"
            android:padding="10dp"
            android:text=" Couples"
            android:textColor="@color/blue"
            android:textSize="18sp" />

        <androidx.appcompat.widget.AppCompatCheckBox
            android:id="@+id/selectsingles"
            android:layout_width="331dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:drawableRight="@drawable/ic_baseline_person_24"
            android:drawablePadding="10dp"
            android:ems="10"
            android:padding="10dp"
            android:text="Singles"
            android:textColor="@color/blue"
            android:textSize="18sp" />

        <androidx.appcompat.widget.AppCompatCheckBox
            android:id="@+id/selectfamily"
            android:layout_width="331dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:drawableRight="@drawable/ic_baseline_family_restroom_24"
            android:drawablePadding="10dp"
            android:ems="10"
            android:padding="10dp"
            android:text="Family"
            android:textColor="@color/blue"
            android:textSize="18sp" />



        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:drawableLeft="@drawable/ic_baseline_price_change_24"
            android:drawablePadding="10dp"
            android:ems="10"
            android:padding="10dp"
            android:text="Price Range"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            />

        <androidx.appcompat.widget.AppCompatSpinner
            android:id="@+id/budgetspinner"
            android:layout_width="330dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:fadeScrollbars="true"
            android:fitsSystemWindows="true"
            android:outlineSpotShadowColor="@color/textcolor"
            android:scrollIndicators="right"
            android:scrollbarFadeDuration="1000"
            android:scrollbarSize="5dp"
            android:scrollbarStyle="insideOverlay"
            android:scrollbars="vertical"
            android:spinnerMode="dropdown"
            android:backgroundTint="@color/black"
            android:verticalScrollbarPosition="right"
            />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/PostBtn"
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="50dp"
            android:layout_marginRight="10dp"
            android:backgroundTint="@color/black"
            android:padding="14dp"
            android:shadowColor="@color/textcolor"
            android:text="Post"
            app:cornerRadius="10dp"
            android:textColor="@color/white"
            android:layout_marginBottom="50dp"
            app:elevation="8dp"
            />
    </LinearLayout>


</ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
